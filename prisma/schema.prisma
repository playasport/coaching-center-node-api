// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CoachingCentre {
  id                String                   @id @db.Char(36)
  firstName         String?                  @map("first_name")
  lastName          String?                  @map("last_name")
  email             String?                  @unique(map: "coaching_centres_email_unique")
  mobileNumber      String?                  @map("mobile_number")
  password          String?
  coachingName      String?                  @map("coaching_name")
  logo              String?
  locationName      String?                  @map("location_name")
  experience        Decimal?                 @db.Decimal(8, 2)
  bio               String?                  @db.Text
  facility          String?                  @db.Text
  allowedGender     String?                  @map("allowed_gender")
  allowDisability   Int?                     @map("allow_disability")
  contactNumber     String?                  @map("contact_number")
  callStartTime     String?                  @map("call_start_time")
  callEndTime       String?                  @map("call_end_time")
  contactEmail      String?                  @map("contact_email")
  addressLine1      String?                  @map("address_line1") @db.Text
  addressLine2      String?                  @map("address_line2") @db.Text
  pincode           String?
  cityId            BigInt?                  @map("city_id") @db.UnsignedBigInt
  stateId           BigInt?                  @map("state_id") @db.UnsignedBigInt
  profilePhoto      String?                  @map("profile_photo")
  accountPersonName String?                  @map("account_person_name")
  bankName          String?                  @map("bank_name")
  accountNumber     String?                  @map("account_number")
  ifscCode          String?                  @map("ifsc_code")
  upiId             String?                  @map("upi_id")
  paymentMode       Int?                     @map("payment_mode")
  signupDateTime    DateTime?                @map("signup_date_time") @db.DateTime(0)
  isAdminApprove    String                   @map("is_admin_approve") @default("pending_approval")
  rejectionReason   String?                  @map("rejection_reason") @db.Text
  termsAndCondition String?                  @map("terms_and_condition") @db.LongText
  isActive          Boolean                  @map("is_active") @default(true)
  mainCoachingId    String?                  @map("main_coaching_id") @db.Char(36)
  isMain            CoachingCentreIsMain     @map("is_main") @default(ONE)
  rememberToken     String?                  @map("remember_token")
  createdAt         DateTime?                @map("created_at") @db.Timestamp(0)
  updatedAt         DateTime?                @map("updated_at") @db.Timestamp(0)
  deletedAt         DateTime?                @map("deleted_at") @db.Timestamp(0)
  lat               String?
  long              String?
  addedBy           Int?                     @map("added_by")

  @@index([isActive, isAdminApprove], map: "idx_coaching_active_approved")
  @@index([coachingName], map: "idx_coaching_name")
  @@index([experience], map: "idx_coaching_experience")
  @@index([allowDisability], map: "idx_coaching_disability")
  @@index([lat, long], map: "idx_coaching_location")
  @@index([cityId], map: "idx_coaching_city")
  @@index([createdAt], map: "idx_coaching_created_at")
  @@index([isActive, isAdminApprove, isMain], map: "idx_active_approved_main")
  @@index([lat, long], map: "idx_lat_long")
  @@map("coaching_centres")
}

enum CoachingCentreIsMain {
  ZERO @map("0")
  ONE  @map("1")

  @@map("is_main")
}


